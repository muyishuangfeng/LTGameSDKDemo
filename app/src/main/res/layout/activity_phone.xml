<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="登录"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="注册"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="修改密码"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Result" />

    <RelativeLayout
        android:id="@+id/ryt_guest"
        android:layout_width="@dimen/dp_145"
        android:layout_height="@dimen/dp_35"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_31"
        android:background="@drawable/btn_light_gray_corner"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_guest_left"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_30"
            android:src="@drawable/blue_point" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_guest_middle"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_toRightOf="@+id/img_guest_left"
            android:src="@drawable/blue_point" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_guest_right"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:layout_toRightOf="@+id/img_guest_middle"
            android:src="@drawable/blue_point" />

    </RelativeLayout>


</LinearLayout>
